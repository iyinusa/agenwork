{
  "manifest_version": 3,
  "name": "AgenWork",
  "version": "1.0.0",
  "description": "A smart browsing agent that helps users with instant answers, smarter suggestions, and tasks using Chrome's built-in AI APIs.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/ai-agents.js", "js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/agenwork.png",
      "32": "images/agenwork.png",
      "48": "images/agenwork.png",
      "128": "images/agenwork.png"
    }
  },
  "icons": {
    "16": "images/agenwork.png",
    "32": "images/agenwork.png",
    "48": "images/agenwork.png",
    "128": "images/agenwork.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "css/*",
        "js/floating-icon.js",
        "js/ai-agents.js",
        "popup.html",
        "js/popup.js",
        "js/dexie.min.js",
        "js/database.js",
        "css/fontawesome.css",
        "webfonts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}